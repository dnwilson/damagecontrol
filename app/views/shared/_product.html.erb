<div class="align-center product-<%= product.id %>">
	<div class="col-md-12">
		<div class=" product-<%= product.id %>">
			<%= image_tag product.image.url(:thumb) %>
		</div>
		<div class="product-<%= product.id %>-name">
			<%= product.name %>
		</div>
		<div class="product-<%= product.id %>-desc">
			<%= product.description %>
		</div>
		<div class="product-<%= product.id %>-price">
			<%= product.price %>
		</div>
		<div class="product-<%= product.id %>-buy">
	      	<%= link_to "Add to Cart", line_items_path(:product_id => product), :method => :post, class: "btn btn-primary" %>
	    </div>
	</div>
</div>