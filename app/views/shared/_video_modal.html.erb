<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#videoModal">
  Add Video
</button>

<!-- Modal -->
<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="videoModalLabel">Add a video to this event</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@video) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.hidden_field :event_id %>
          <%= f.hidden_field :image %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :description %>
          <%= f.hidden_field :date %>
          <%= f.text_field :url, placeholder: "Video url", style: "height: 35px; padding: 10px; width: 70%;" %>
          <%= f.submit "Add Video", class: "btn btn-primary pull-right", style: "height: 35px; width: 25%;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>