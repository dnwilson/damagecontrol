<div class="gallery-sidebar">
	<% if gallery.nil? %>
		<h4>Photos</h4>
		<p>There is no event attached to this gallery.</p>
	<% else %>
		<h4><%= link_to "Photos", gallery_path(gallery) %></h4>
		<div id="photos" class="row">
			<% gallery.photos.sample(12).each do |photo| %>
				<div class="photo-thumb photo-<%= photo.id %> mar-bot10 col-md-4 col-sm-4 col-xs-4" id="photo-<%= photo.id %>" >
					<%= link_to image_tag(photo.image.thumb.url, :class => "img-rounded"), photo.image.lg.url, :data => { :colorbox => true }, :class => "group1 cboxElement" %>
				</div>
			<% end %>
		</div>
	<% end %>
</div>