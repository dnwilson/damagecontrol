<% if signed_in? %>
	<div class="row">
		<h2 class="col-md-10 col-sm-10 col-xs-10"><%= @event.name %></h2>
		<div class="dropdown col-md-2 col-sm-2 col-xs-2">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></a>
			<ul class="dropdown-menu">
				<li>
					<%= link_to edit_event_path(@event) do %>
							edit
						<% end %>
				</li>
				<li>
					<%= link_to "delete", @event, data: {confirm: "Are you sure?"}, method: :delete %>
				</li>
			</ul>
		</div>
	</div>
<% else %>
	<h2><%= @event.name %></h2>
<% end %>