<section class="panel">
	<div class="container">
		<div class="row mar-bot40">
			<div class="col-md-2 col-sm-2 col-xs-2 event-date align-center">
				<div class="date-container">
					<div class="day pad-top10"><%= @event.date.strftime('%a') %></div>
					<hr>
					<div class="month"><%= @event.date.strftime('%b') %></div>
					<div class="date"><%= @event.date.strftime('%d') %></div>
				</div>
			</div>
			<div class="col-md-10 col-sm-10 col-xs-10 event-main">
				<div class="row">
					<div class="col-md-7 col-sm-7 mar-bot20 event-desc">
						<h2><%= @event.name %></h2>
						<%= link_to image_tag(@event.flyer.lg.url), @event.flyer.url, :data => { :colorbox => true }, :class => "group1 cboxElement" %>
					</div>
					<div class="col-md-5 col-sm-5 event-sidebar">
						<div class="venue-details">
							<div class="club-name"><%= @event.venue %></div>
							<div class="club-address"><%= @event.address %></br>
							<%= @event.city %>, <%= @event.state %> <%= @event.zipcode %></div>
						</div>
						<hr>
						<div class="gallery">
							<% if @event.gallery.nil? %>
								<%= render partial: "gallery_modal" %>
							<% else %>
								<h3><%= link_to "Photos", gallery_path(@event.gallery) %></h3>
								<div id="photos" class="row">
									<% @event.gallery.photos.sample(12).each do |photo| %>
										<div class="photo-thumb photo-<%= photo.id %> mar-bot10 col-md-4 col-sm-4 col-xs-3" id="photo-<%= photo.id %>" >
											<%= link_to image_tag(photo.image.thumb.url, :class => "img-rounded"), photo.image.lg.url, :data => { :colorbox => true }, :class => "group1 cboxElement" %>
										</div>

									<% end %>
								</div>
							<% end %>
						</div>
						<hr>
						<div class="video mar-bot20">
							<% if @event.videos.empty? %>
								<%= render partial: "video_modal" %>
							<% else %>
								<h3><%= link_to "Videos", videos_path(@event.videos) %></h3>
								<div id="videos" class="row">
									<% @event.videos.each do |video| %>
										<div class="video-thumb video-<%= video.id %> mar-bot10 col-md-6 col-sm-6 col-xs-3" id="video-<%= video.id %>" >
											<%= link_to image_tag(video.image), youtube_embed(video.url), :data => { :colorbox => true }, :class => "youtube cboxElement" %>
										</div>
									<% end %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-7 col-sm-7 event-details">
						<%= @event.description_html %>
					</div>
					<div class="col-md-5 col-sm-5"></div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	$(document).ready(function(){
		//Examples of how to assign the Colorbox event to elements
		$(".youtube").colorbox({iframe:true, innerWidth:640, innerHeight:390});
		$(".group1").colorbox({rel:'group1', maxHeight:'90%'});
	});
</script>