<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#galleryModal">
  Add Gallery
</button>

<!-- Modal -->
<div class="modal fade" id="galleryModal" tabindex="-1" role="dialog" aria-labelledby="galleryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="galleryModalLabel">Add a gallery to this event</h4>
      </div>
      <div class="modal-body">
        <%= render partial: "galleries/gallery_form", locals: {gallery: @gallery} %>
      </div>
    </div>
  </div>
</div>