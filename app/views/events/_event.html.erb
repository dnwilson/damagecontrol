<article class="col-md-4 isotopeItem <%= season(event) %>">
	<div class="events-item">
		<%= link_to image_tag(event.flyer.sm.url), event_path(event.id) %>
		
		<%= link_to event, :class => "events-desc align-center" do %>
			<h3><%= event.name %></h3>
			<h6>@ <%= event.venue %></h6>
			<h6><%= event.date.strftime("%A, %b #{event.date.day.ordinalize} %Y") %></h6>
			<!-- <i class="fa fa-plus fa-2x"></i> -->
		<% end %>
	</div>
</article>
