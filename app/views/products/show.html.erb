<section class="panel">
	<div class="container">   
		<div class="row mar-bot40">
			<ul class="col-md-offset-2 col-md-8">
				<li class="col-md-12 col-sm-12 col-xs-12 product-<%= @product.id %>">
					<div class="col-md-3 col-sm-3 col-xs-3 product-<%= @product.id %>-image">
						<%= image_tag @product.image.url(:thumb) %>
					</div>
					<div class="col-md-7 col-sm-7 col-xs-7 product-<%= @product.id %>-info">
						<div class="product-<%= @product.id %>-name">
							<%= @product.name %>
						</div>

						<div class="product-<%= @product.id %>-desc">
							<%= @product.description %>
						</div>

						<div class="product-<%= @product.id %>-price">
							<%= @product.price %>
						</div>
						<% if @product.in_stock? %>
							<%= form_for(@product) do |f| %>
								<%= f.select :inventory, options_for_select(available_sizes(@product.id), :name), {onchange: set_size(:inventory)} %>
							<% end %>
						<% else %>
							Out of Stock
						<% end %>

					</div>
					<div class="col-md-2 col-sm-2 col-xs-2 product-<%= @product.id %>-buy">
						<div class="actions">
				      	<%= button_to "Add to Cart", line_items_path(:product_id => @product, :size => @size), :method => :post, class: "btn btn-primary" %>
				    </div>
					</div>
				</li>
			</ul>
		</div>
	</div>
</section>
