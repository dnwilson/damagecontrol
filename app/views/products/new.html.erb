<%= bootstrap_form_for(@product, :validate => true, :html => {:class => 'product-form', :multipart => true, :autocomplete => :off}) do |f| %>
	<%= render 'layouts/messages', object: f.object %>

	<%= f.file_field :image %>
	<%= f.text_field :name %>
	<%= f.text_field :description %>
	<%= f.check_box  :downloadable %>
	<%= f.text_field :price %>

	<%= f.submit "Create Product" %>

<% end %>