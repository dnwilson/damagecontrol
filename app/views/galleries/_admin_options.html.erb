<% if signed_in? %>
	<div class="row">
		<h2 class="col-md-11 col-sm-11"><%= @gallery.name %></h2>
		<div class="dropdown col-md-1 col-sm-1">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></a>
			<ul class="dropdown-menu">
				<li>
					<%= link_to edit_gallery_path(@gallery) do %>
							edit
						<% end %>
				</li>
				<li>
					<%= link_to "delete", @gallery, data: {confirm: "Are you sure?"}, method: :delete %>
				</li>
			</ul>
		</div>
	</div>
<% else %>
	<h2><%= @gallery.name %></h2>
<% end %>