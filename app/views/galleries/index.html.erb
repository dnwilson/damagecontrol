<section class="panel">
	<div class="container">
		<div class="row mar-bot40">
			<div class="col-md-12 col-sm-12 col-xs-12">
				<% if !@galleries.empty? %>
					<div class="gallery-list">
						<% @galleries.each do |gallery| %>
							<div class="col-md-3 col-sm-4 col-xs-6 align-center" id="<%= gallery.id %>">
								<img src="assets/default.svg" class="img-rounded">
								<h3 class="mar-top10 mar-bot10"><%= gallery.name %></h3>
								<div class="gallery-desc mar-bot20">
									<%= gallery.description %>
								</div>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>