<section class="login">
	<div class="container">
		<div class="row">
			<div class="mar-top40 align-center col-md-offset-3 col-md-6">
				<h2>Sign up</h2>

				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

					<div class="left-inner-addon col-md-offset-2 col-md-8">
						<i class="fa fa-envelope"></i>
						<%= f.email_field :email, :autofocus => true, placeholder: "Email Address" %>
					</div>
					<div class="left-inner-addon col-md-offset-2 col-md-8">
						<i class="fa fa-lock"></i>
						<%= f.password_field :password, :autocomplete => "off", placeholder: "Password"  %>
					</div>

					<div class="left-inner-addon col-md-offset-2 col-md-8">
						<i class="fa fa-lock"></i>
						<%= f.password_field :password_confirmation, placeholder: "Confirmation"  %>
					</div>

					<div class="left-inner-addon col-md-offset-2 col-md-8"><%= f.submit "Sign up", class: "btn btn-black" %></div>
				<% end %>

				<div class="left-inner-addon devise-links align-left mar-top30 col-md-offset-2 col-md-8">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</section>