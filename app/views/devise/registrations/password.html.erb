<% provide(:title, "Password") %>
<section class="panel">
    <div class="container">
      <div class="row mar-bot40">
        <div class="col-md-offset-2 col-md-8">
          <%= render partial: "shared/settings_nav" %>
          <div class="row mar-top25">
            <div class="user-info">
              <div class="user-dets">
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "row mar-top25", :method => :put }) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="left-inner-addon col-md-offset-2 col-md-8">
                    <i class="fa fa-lock"></i>
                    <%= f.password_field :password, :autocomplete => "off", placeholder: "New Password"  %>
                  </div>

                  <div class="left-inner-addon col-md-offset-2 col-md-8">
                    <i class="fa fa-lock"></i>
                    <%= f.password_field :password_confirmation, placeholder: "Confirmation"  %>
                  </div>

                  <div class="left-inner-addon col-md-offset-2 col-md-8">
                    <i class="fa fa-unlock"></i>
                    <%= f.password_field :current_password, placeholder: "Current Password"  %>
                  </div>

                  <div class="col-md-offset-2 col-md-8"><%= f.submit "Update", class: "btn btn-black" %></div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>