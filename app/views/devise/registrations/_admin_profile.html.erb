<section class="panel">
	<div class="container">   
		<div class="row mar-bot40">
			<div class="col-md-offset-2 col-md-8">
				<%= render partial: "shared/admin_nav" %>
			</div>
		</div>
		<div class="row mar-bot40">
			<div class="col-md-12">
				<div class="col-md-3">
					Product
				</div>
				<div class="col-md-1">
					xs
				</div>
				<div class="col-md-1">
					s
				</div>
				<div class="col-md-1">
					m
				</div>
				<div class="col-md-1">
					l
				</div>
				<div class="col-md-1">
					xl
				</div>
				<div class="col-md-1">
					xxl
				</div>
			</div>
			<div class="col-md-12">
				<% if @products.any? %>
					<% @products.each do |product| %>					<%= form_for(@inventory, :html => {class: "inventory-form", :autocomplete => :off}) do |f| %>
							<%= render 'shared/error_messages', object: f.object %>
							<div class="col-md-3">
								<%= image_tag(product.image.url) %>
								<%= Product.find(product.id).name %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :xsmall %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :small %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :medium %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :large %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :xlarge %>
							</div>
							<div class="col-md-1">
								<%= f.text_field :xxlarge %>
							</div>
							<div class="col-md-1">
								<%= f.submit "Update", class: "btn btn-black" %>
							</div>
						<% end %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</section>