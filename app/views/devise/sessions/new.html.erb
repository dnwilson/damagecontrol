<section class="login">
	<div class="container">
		<div class="row">
			<div class="mar-top40 align-center col-md-offset-3 col-md-6">
				<h2>Sign in</h2>

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

					<%= devise_error_messages! %>

					<div class="left-inner-addon col-md-offset-2 col-md-8">
						<i class="fa fa-envelope"></i>
						<%= f.email_field :email, :autofocus => true, placeholder: "Email" %>
					</div>
					<div class="left-inner-addon col-md-offset-2 col-md-8">
						<i class="fa fa-lock"></i>
						<%= f.password_field :password, placeholder: "Password" %>
					</div>

					<% if devise_mapping.rememberable? -%>
						<div class="left-inner-addon col-md-offset-2 col-md-8"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
					<% end -%>

					<div class="left-inner-addon col-md-offset-2 col-md-8"><%= f.submit "Log in", class: "btn btn-black" %></div>
				<% end %>

				<div class="left-inner-addon devise-links align-left mar-top30 col-md-offset-2 col-md-8">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</section>